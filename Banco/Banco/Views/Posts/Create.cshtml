                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.contenido, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea name="contenido" id="contenido"></textarea>
                </div>
            </div>

