@{
    ViewBag.Title = "Login";
}
<div class="row cajon prs">
    <div class="col s6 center bor arriba">
        <div class="row">
            <div class="">
                <h4 class="derecha">Inicia Sesión</h4>
            </div>
            <form class="col s12 ">
                <div class="pr">
                    <div class="row ">
                        <div class="input-field col s12 ">
                            <input id="email" type="email" class="validate" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate" required>
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <a class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action">
                                Iniciar
                                <i class="material-icons right">send</i>
                            </a>
                            <a href="/Home/Index">Cancelar</a>
                        </div>
                    </div>
                    <div class="margen">
                        <a>¿Olvidaste tu contraseña?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col s6 center arriba">
        <a href="Registro" class="btn ar blue-grey darken-4">Registrarme</a><br />
        <h5 class="ar">O puedes registrarte con tus redes sociales</h5>
        <div class="ar">
            <button class="btn blue darken-4">Facebook</button>
        </div>
        <br/>
        <div>
            <button class="btn light-blue lighten-1">Twitter</button>
        </div>
    </div>
</div>


