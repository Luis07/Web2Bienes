@model Bienes_Banco.Models.user
@{
    ViewBag.Title = "Contacto";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row center">
        <div class="col s12">
            <br>
            <div class="row google-maps">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3925.2845979151607!2d-84.4320418857885!3d10.319093570291312!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa065f2736779af%3A0xb19fc13e0aae988c!2sUniversidad+T%C3%A9cnica+Nacional%2C+San+Carlos!5e0!3m2!1sen!2s!4v1466443313128" width="1200" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
        <div class="container">
            <div class="col s6">
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s6">
                                <input placeholder="" id="first_name" name="name" type="text" class="validate">
                                <label for="first_name">First Name</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="last_name" type="text" name="lastname" class="validate">
                                <label for="last_name">Last Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" name="email" class="validate">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="asunto" type="text" name="asunto" class="validate">
                                <label for="asunto">Asunto</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="contenido" type="text" class="validate">
                                <textarea class="medium" for="contenido" placeholder="Mensaje" name="contenido"></textarea>
                            </div>
                        </div>
                        <button class="waves-effect waves-light btn blue-grey darken-1" type="submit">Enviar</button>
                    </form>
                </div>
            </div>
            <div class="col s6">
                <div class="row">
                    <div class="col s12 m10 right">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Bienes Raices</span>
                                <p>Somos una empresa sobre bienes rainces...</p>
                                <ul>
                                    <li>Email: bienesraices@gmail.com</li>
                                    <li>Telefono: 8888-8888</li>
                                </ul>
                            </div>
                            <div class="card-action"> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}